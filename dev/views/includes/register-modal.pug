#register-modal.lightbox
    form#register-form.form
        .form__field
            label(for="register-email").form-label Email
            input(type="email" name="email")#register-email.form__input
        .form__field
            label(for="register-password").form-label Password
            input(type="password" name="password")#register-password.form__input
        .form__field
            label(for="register-password-2").form-label Repeat password
            input(type="password" name="password-2")#register-password-2.form__input
        .form__field
            input.button(type="submit" name="button" value="Send").form__submit


